<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androird.firststeps3" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.androird.firststeps3.MainActivity" />
        </activity>
        <activity
            android:name=".Gibbet"
            android:label="@string/title_activity_gibbet"
            android:parentActivityName=".Home"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.androird.firststeps3.Home" />
        </activity>
        <activity
            android:name=".GibbetPlay"
            android:label="@string/title_activity_gibbet_play"
            android:parentActivityName=".Gibbet"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.androird.firststeps3.Gibbet" />
        </activity>
        <activity
            android:name=".Sidebar"
            android:label="@string/title_activity_sidebar"
            android:parentActivityName=".Home"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.androird.firststeps3.Home" />
        </activity>
    </application>

</manifest>
